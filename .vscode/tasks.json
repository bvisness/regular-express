    "tasks": [
        {
            "label": "Build App",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "python",
            "args": [
                "build.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build App (Release)",
            "group": {
                "kind": "build"
            },
            "type": "shell",
            "command": "python",
            "args": [
                "build.py", "release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Launch Server",
            "type": "process",
            "command": "python",
            "args": [
                "-m",
                "http.server"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/dist"
            },
            "problemMatcher": []
        }
    ]
}