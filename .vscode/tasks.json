{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C", "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\Common7\\Tools\\VsDevCmd.bat\"",
                    "&&",
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Build App",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "python",
            "args": [
                "build.py"
            ]
        },
        {
            "label": "Launch Server",
            "type": "process",
            "command": "python",
            "args": [
                "-m",
                "http.server"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/build/dist"
            }
        }
    ]
}